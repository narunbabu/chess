*.json  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf

# Keep native Windows endings for Windows-only scripts
*.bat   text eol=crlf
*.ps1   text eol=crlf
